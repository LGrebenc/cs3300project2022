<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Project Name:", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :"description:", style: "display: block" %>
    <%= form.text_area :description %>
  </div>


  <!-- Display the correct button label between the edit view and the new view -->
  <% if @is_new %>
    <div>
      <%=link_to "Create Project", form.submit, :class => "btn btn-danger active" %>
    </div>


  <% else %>
    <div>
      <%=link_to "Update Project", form.submit, :class => "btn btn-danger active" %>
    </div>
  <% end %>
<% end %>
